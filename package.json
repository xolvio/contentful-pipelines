{
  "name": "@xolvio/contentful-pipelines",
  "version": "1.2.1",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && chmod +x ./bin/cli.js",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "types": "./bin/index.d.ts",
  "main": "./bin/index.js",
  "dependencies": {
    "contentful-migrate": "^0.16.0",
    "dateformat": "^4.5.1",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "micromatch": "^4.0.4"
  },
  "devDependencies": {
    "@types/dateformat": "^3.0.1",
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.4",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/react": "^17.0.15",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "testdouble": "^3.16.1",
    "testdouble-jest": "^2.0.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "contentful-migrate": "^0.17.0"
  },
  "bin": {
    "xolvio-contentful-migrations": "./bin/cli.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "warnOnly": false,
        "isolatedModules": true
      }
    },
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ]
  },
  "wallaby": {
    "runMode": "onsave",
    "autoDetect": true
  }
}
