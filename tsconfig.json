{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "baseUrl": ".",
    "lib": ["ES2015", "ESNext"],
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "bin"]
}
